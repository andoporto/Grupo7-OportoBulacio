@model CapaNegocioDatos.Reservas

@{
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <!-- CABECERA -->
            <h2 class="text-center">Confirmar reserva</h2>

            <!--Campos ocultos-->
            <input type="hidden" id="IdPelicula" name="IdPelicula" value="@ViewBag.IdPelicula" />
            <input type="hidden" id="IdVersion" name="IdVersion" value="@ViewBag.IdVersion" />
            <input type="hidden" id="IdSede" name="IdSede" value="@ViewBag.IdSede" />
            <input type="hidden" id="FechaReserva" name="FechaReserva" value="@ViewBag.FechaReserva" />

            <div class="form-group">
                <label for="Email">Email: </label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="TipoDocumento">Tipo documento: </label>
                @Html.DropDownList("IdTipoDocumento", null, "Selecione tipo documento", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTipoDocumento, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="CantidadEntradas">Cantidad entradas: </label>
                @Html.EditorFor(model => model.CantidadEntradas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CantidadEntradas, "", new { @class = "text-danger" })
            </div>

            <!-- BOTON RESERVAR -->
            <div class="text-center">
                <input type="submit" class="btn btn-success" value="Confirmar Reserva" />

                <!-- LINK SALIR -->
                <a href="./Home/Inicio" class="btn btn-default">Cancelar</a>
            </div>
        </div>
    }
</div>