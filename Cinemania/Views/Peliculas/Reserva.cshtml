@model CapaNegocioDatos.Reservas

@{
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <!-- CABECERA -->
            <h2 class="text-center">Reserva de @ViewBag.NombrePelicula</h2>

            <!--Campo oculto input pelicula-->
            <input type="hidden" id="IdPelicula" name="IdPelicula" value="@ViewBag.IdPelicula" />

            <div class="form-group">
                <label for="Version">Versión: </label>
                    @Html.DropDownListFor(m => m.IdVersion, new SelectList(@ViewBag.listaVersiones, "IdVersion", "Nombre"), "Seleccione version ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.IdVersion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Sede">Sede: </label>
                @Html.DropDownListFor(m => m.IdSede, new SelectList(""), "Seleccionar Sede ", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IdSede, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Dia">Dia: </label>
                <select class="form-control" id="DiasReservas" name="DiasReservas">
                      <option value="" disabled selected>Seleccione Dia</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Hora">Horario: </label>
                    <select class="form-control" id="HorasReservas" name="HorasReservas">
                        <option value="" disabled selected>Seleccione Horario</option>
                    </select>
                </div>

                <!-- BOTON RESERVAR -->
                <div class="text-center">
                    <input type="submit" class="btn btn-success" value="Reservar" />

                    <!-- LINK SALIR -->
                    <a href="./Home/Inicio" class="btn btn-default">Cancelar</a>
                </div>    
            </div>   
    }       
</div>

<script src="~/Scripts/Reserva.js"></script>