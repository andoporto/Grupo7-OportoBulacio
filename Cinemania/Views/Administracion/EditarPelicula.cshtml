@model CapaNegocioDatos.Peliculas

@{
    Layout = "/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container">
    @using (Html.BeginForm("/EditarPelicula", "Administracion", new { enctype = "multipart/form-data", @class = "panel-body" }))
    {
        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

            <!-- CABECERA -->
            <h2 class="text-center">Editar</h2>

            <!-- INPUT ID OCULTO -->
            @Html.TextBoxFor(m => m.IdPelicula, new { type = "hidden" })

            <!-- INPUT NOMBRE -->
            <div class="form-group">
                <label for="nombre">Nombre</label>
                @Html.TextBoxFor(m => m.Nombre, new { placeholder = "Ingresar Nombre", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre)
            </div>

            <!-- INPUT DESCRIPCION -->
            <div class="form-group">
                <label for="descripcion">Descripcion</label>
                @Html.TextBoxFor(m => m.Descripcion, new { placeholder = "Ingresar Descripcion", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Descripcion)
            </div>

            <!-- INPUT CALIFICACION -->
            <div class="form-group">
                <label for="calificacion">Calificacion</label>
                @Html.DropDownList("IdCalificacion", null, "Seleccionar", new { @class = "form-control" })
            </div>

            <!-- INPUT GENERO -->
            <div class="form-group">
                <label for="genero">Genero</label>
                @Html.DropDownList("IdGenero", null, "Seleccionar", new { @class = "form-control" })
            </div>

            <!-- INPUT IMAGEN -->
            <div class="form-group">
                <label for="file">Imagen</label>
                @Html.TextBoxFor(m => m.Imagen, new { Type = "file" })
                @Html.ValidationMessageFor(m => m.Imagen)
            </div>

            <!-- INPUT DURACION -->
            <div class="form-group">
                <label for="duracion">Duracion</label>
                @Html.TextBoxFor(m => m.Duracion, new { placeholder = "Ingresar Duracion", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Duracion)
            </div>

            <!-- BOTON GUARDAR -->
            <div class="text-center">
                <input type="submit" class="btn btn-success" value="Actualizar" />

                <!-- LINK SALIR -->
                <a href="./Peliculas" class="btn btn-default">Cancelar</a>
            </div>

        </div>
    }
</div>