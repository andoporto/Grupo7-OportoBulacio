@model CapaNegocioDatos.Sedes

@{
    Layout = "/Views/Shared/_LayoutAdministracion.cshtml";
}

<div class="container">
    @using (Html.BeginForm("/EditarSede", "Administracion", new { @class = "panel-body" }))
    {
        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

            <!-- CABECERA -->
            <h2 class="text-center">Editar</h2>

            <!-- INPUT ID OCULTO -->
            @Html.TextBoxFor(m => m.IdSede, new { type = "hidden" })

            <!-- INPUT NOMBRE -->
            <div class="form-group">
                <label for="nombre">Nombre</label>
                @Html.TextBoxFor(m => m.Nombre, new { placeholder = "Ingresar Nombre", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre)
            </div>

            <!-- INPUT DIRECCION -->
            <div class="form-group">
                <label for="direcion">Direccion</label>
                @Html.TextBoxFor(m => m.Direccion, new { placeholder = "Ingresar Direccion", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Direccion)
            </div>

            <!-- INPUT PRECIO ENTRADA -->
            <div class="form-group">
                <label for="precio">Precio Entrada</label>
                @Html.TextBoxFor(m => m.PrecioGeneral, new { placeholder = "Ingresar Precio Entrada", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PrecioGeneral)
            </div>

            <!-- BOTON GUARDAR -->
            <div class="text-center">
                <input type="submit" class="btn btn-success" value="Actualizar" />

                <!-- LINK SALIR -->
                <a href="./Sedes" class="btn btn-default">Cancelar</a>
            </div>

        </div>
    }
</div>
